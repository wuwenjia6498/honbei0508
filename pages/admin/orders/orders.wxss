/* pages/admin/orders/orders.wxss */

/* 全局样式 */
page {
  --primary-color: #ff6b6b;
  --secondary-color: #4ecdc4;
  --text-color: #333333;
  --light-text: #666666;
  --lighter-text: #999999;
  --border-color: #eeeeee;
  --bg-color: #f8f8f8;
  --success-color: #4ecdc4;
  --warning-color: #ffbe76;
  --danger-color: #ff6b6b;
  background-color: #f7f7f7;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 订单管理页面容器 */
.orders-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 列表视图 */
.list-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 标签页导航 */
.tab-bar {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1aad19;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1aad19;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  padding-bottom: 100rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空列表状态 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-list image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 订单项 */
.order-item {
  margin: 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-number {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status.pending {
  color: #ff9c01;
}

.order-status.shipping {
  color: #1aad19;
}

.order-status.completed {
  color: #8c8c8c;
}

.order-status.cancelled {
  color: #999;
}

/* 订单内容 */
.order-content {
  padding: 0 24rpx;
}

/* 商品列表 */
.product-list {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-price-qty {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  color: #ff6b6b;
  font-weight: 500;
}

.product-qty {
  color: #999;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.order-amount text {
  font-size: 24rpx;
  color: #666;
}

.order-amount .price {
  color: #ff6b6b;
  font-weight: 500;
  font-size: 28rpx;
}

/* 详情视图 */
.detail-view {
  flex: 1;
  padding-bottom: 120rpx;
}

.detail-header {
  padding: 20rpx;
}

.back-button {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  position: relative;
}

.back-icon::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 15rpx;
  width: 16rpx;
  height: 16rpx;
  border-left: 2rpx solid #666;
  border-bottom: 2rpx solid #666;
  transform: rotate(45deg);
}

.status-card {
  background: linear-gradient(to right, #1aad19, #39d67d);
  border-radius: 16rpx;
  color: #fff;
  padding: 30rpx 24rpx;
  display: flex;
  align-items: center;
}

.status-card.pending {
  background: linear-gradient(to right, #ff9c01, #ffb746);
}

.status-card.shipping {
  background: linear-gradient(to right, #1aad19, #39d67d);
}

.status-card.completed {
  background: linear-gradient(to right, #8c8c8c, #b2b2b2);
}

.status-card.cancelled {
  background: linear-gradient(to right, #999, #ccc);
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

/* 详情内容 */
.detail-content {
  padding: 0 20rpx;
}

.detail-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

/* 订单信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
}

.info-value.with-action {
  display: flex;
  align-items: center;
}

.copy-btn {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #1aad19;
}

/* 进度时间线 */
.progress-timeline {
  position: relative;
}

.progress-item {
  display: flex;
  position: relative;
  margin-bottom: 40rpx;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin-top: 6rpx;
  position: relative;
  z-index: 2;
}

.progress-item.completed .progress-dot {
  background-color: #1aad19;
}

.progress-line {
  position: absolute;
  top: 18rpx;
  left: 12rpx;
  width: 2rpx;
  height: calc(100% + 40rpx);
  background-color: #eee;
  z-index: 1;
}

.progress-item.completed .progress-line {
  background-color: #1aad19;
}

.progress-info {
  margin-left: 24rpx;
  flex: 1;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.progress-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.progress-time {
  font-size: 24rpx;
  color: #999;
}

/* 商品详情 */
.detail-product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-product-item:last-child {
  border-bottom: none;
}

.detail-product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.detail-product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.detail-product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.detail-product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-product-price-qty {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.detail-product-price {
  color: #ff6b6b;
  font-weight: 500;
}

.detail-product-qty {
  color: #999;
}

.detail-product-subtotal {
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

/* 订单汇总 */
.order-summary {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.summary-label {
  color: #999;
}

.summary-value {
  color: #333;
}

.summary-item.total {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #eee;
}

.summary-item.total .summary-label {
  font-weight: 500;
  color: #333;
}

.summary-item.total .summary-value.price {
  color: #ff6b6b;
  font-weight: 500;
  font-size: 32rpx;
}

/* 收货地址 */
.address-info {
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.user-name {
  font-weight: 500;
}

.user-phone {
  color: #666;
}

.address-detail {
  color: #666;
  line-height: 1.5;
}

/* 底部操作按钮 */
.detail-footer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.footer-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.service-btn {
  background-color: #f5f5f5;
  color: #666;
}

.rebuy-btn {
  background-color: #1aad19;
  color: #fff;
}

/* 底部导航栏 */
.tabbar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 9;
}

.tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}

.tabbar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
  opacity: 0.6;
}

.tabbar-icon image {
  width: 100%;
  height: 100%;
}

.tabbar-text {
  font-size: 22rpx;
  color: #7d7e80;
  line-height: 1.2;
}

.tabbar-item.active .tabbar-text {
  color: #333;
}

.tabbar-item.active .tabbar-icon {
  opacity: 1;
}

/* Tabbar占位 */
.tabbar-placeholder {
  height: 100rpx;
} 