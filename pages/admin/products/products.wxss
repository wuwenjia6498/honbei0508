.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx; /* 预留底部导航栏空间 */
}

/* 顶部标题和添加按钮 */
.header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-button-container {
  margin-bottom: 30rpx;
}

.add-btn {
  background-color: #a68a7b;
  color: #fff;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: inline-block;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 30rpx;
}

.search-box input {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 分类筛选 */
.category-filter {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow-x: auto;
  white-space: nowrap;
  padding: 20rpx 0;
  -webkit-overflow-scrolling: touch; /* 增加流畅滚动效果 */
  /* 隐藏滚动条但保持可滚动功能 */
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

/* 隐藏WebKit浏览器的滚动条 */
.category-filter::-webkit-scrollbar {
  display: none;
}

.category-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  background-color: #f8f8f8;
  flex-shrink: 0; /* 防止项目缩小 */
}

.category-item.active {
  background-color: #a68a7b;
  color: #fff;
}

.category-item:first-child {
  margin-left: 20rpx;
}

.category-item:last-child {
  margin-right: 20rpx;
}

/* 商品列表 */
.product-list {
  width: 100%;
}

.product-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.product-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 新的标签样式 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  display: inline-flex;
  align-items: center;
}

.tag-active {
  background-color: #e8f5e9;
  color: #4caf50;
}

.tag-inactive {
  background-color: #f5e8e8;
  color: #f44336;
}

.tag-category {
  background-color: #f0f0f0;
  color: #666;
}

.tag-hot {
  background-color: #fff3e0;
  color: #ff9800;
}

.tag-new {
  background-color: #e3f2fd;
  color: #2196f3;
}

/* 商品价格样式 */
.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #a68a7b;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

/* 商品操作按钮样式 */
.product-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.edit-btn {
  background-color: #f0e6e2;
}

.preview-btn {
  background-color: #e3f2fd;
}

.delete-btn {
  background-color: #ffebee;
}

.action-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 表单弹窗样式 */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 90%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow-y: auto;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-header text {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-value {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn, .submit-btn {
  width: 48%;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.submit-btn {
  background-color: #a68a7b;
  color: #fff;
}

/* 底部导航栏样式移至组件 */

.empty-list {
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
  background-color: #fff;
  border-radius: 12rpx;
  color: #999;
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 调试信息样式 */
.debug-info {
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 表单内容新增样式 */
.form-textarea {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #eee;
  border-radius: 8rpx;
  height: 200rpx;
  font-size: 28rpx;
}

/* 图片上传样式 */
.upload-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background-color: #f8f8f8;
  border: 1px dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

.upload-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.upload-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-delete {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.options-container {
  width: 100%;
}

.option-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.option-input {
  flex: 1;
  padding: 10rpx 20rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.remove-option {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffebee;
  color: #f44336;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.add-option-btn {
  padding: 15rpx 0;
  text-align: center;
  color: #a68a7b;
  font-size: 28rpx;
  border: 1px dashed #a68a7b;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

/* 数据库管理按钮 */
.db-actions {
  display: flex;
}

.db-btn {
  background-color: #5c6bc0;
  color: #fff;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: inline-block;
}

.clean-btn {
  background-color: #5c6bc0;
}

/* 数据库操作弹窗样式 */
.db-modal {
  width: 80%;
  max-width: 600rpx;
}

.warning-text {
  color: #f44336;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 30rpx;
  font-weight: bold;
}

.db-actions-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.db-action-btn {
  padding: 30rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.db-action-btn text {
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-desc {
  font-size: 24rpx !important;
  font-weight: normal !important;
  margin-top: 10rpx;
  opacity: 0.8;
}

.clean-only-btn {
  background-color: #ef5350;
}

.init-btn {
  background-color: #42a5f5;
}

.message-box {
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  margin-top: 20rpx;
}

.message-box.success {
  background-color: #e8f5e9;
  color: #4caf50;
}

.message-box.error {
  background-color: #ffebee;
  color: #f44336;
}

/* 帮助链接样式 */
.help-link {
  margin-top: 20rpx;
  text-align: center;
  padding: 10rpx 0;
}

.help-link text {
  color: #5c6bc0;
  font-size: 26rpx;
  text-decoration: underline;
} 