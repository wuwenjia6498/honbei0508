/* 页面整体样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
  color: #333;
}

.category-page {
  padding-bottom: 100rpx;
}

/* 顶部导航栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.notification {
  width: 50rpx;
  height: 50rpx;
}

.notification image {
  width: 100%;
  height: 100%;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 32rpx;
  padding: 12rpx 20rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  height: 60rpx;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 精选分类样式 */
.featured-categories {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.category-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  height: 200rpx;
}

.category-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.category-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 15rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
}

.category-count {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 分类标签样式 */
.category-tabs {
  background-color: #fff;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #efefef;
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.tab {
  display: inline-block;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #333;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #8D6E63;
  border-radius: 3rpx;
}

/* 商品列表样式 */
.product-list {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
}

.product-info {
  padding: 16rpx;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-rating {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.star-container {
  display: flex;
  align-items: center;
}

.star {
  color: #ffb800;
  font-size: 28rpx;
  margin-right: 6rpx;
}

.score {
  font-size: 24rpx;
  color: #999;
  margin-right: 6rpx;
}

.reviews {
  font-size: 24rpx;
  color: #999;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-container {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #8D6E63;
}

.add-to-cart {
  width: 44rpx;
  height: 44rpx;
  background-color: #8D6E63;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: bold;
} 