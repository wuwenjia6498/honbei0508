<!-- 分类页面 -->
<view class="category-page">
  <!-- 顶部导航栏 -->
  <view class="header">
    <view class="title">分类浏览</view>
    <view class="notification">
      <image src="/assets/images/icons/notification.svg" mode="aspectFit"></image>
    </view>
  </view>
  
  <!-- 搜索框 -->
  <view class="search-container">
    <view class="search-box">
      <icon type="search" size="14" color="#999999"></icon>
      <input type="text" placeholder="搜索烘焙美食..." placeholder-class="placeholder"/>
    </view>
  </view>
  
  <!-- 精选分类 -->
  <view class="featured-categories">
    <view class="section-title">精选分类</view>
    <view class="category-grid">
      <view class="category-item">
        <image src="/assets/images/products/photo-1565299624946-b28f40a0ae38.jpeg" mode="aspectFill"></image>
        <view class="category-info">
          <view class="category-name">面包</view>
          <view class="category-count">20+ 种类</view>
        </view>
      </view>
      <view class="category-item">
        <image src="/assets/images/products/product-matcha-cake.jpg" mode="aspectFill"></image>
        <view class="category-info">
          <view class="category-name">蛋糕</view>
          <view class="category-count">15+ 种类</view>
        </view>
      </view>
      <view class="category-item">
        <image src="/assets/images/products/product-brownie.jpg" mode="aspectFill"></image>
        <view class="category-info">
          <view class="category-name">饼干</view>
          <view class="category-count">12+ 种类</view>
        </view>
      </view>
      <view class="category-item">
        <image src="/assets/images/products/product-cream-puff.jpg" mode="aspectFill"></image>
        <view class="category-info">
          <view class="category-name">甜点</view>
          <view class="category-count">18+ 种类</view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 分类标签 -->
  <view class="category-tabs">
    <scroll-view scroll-x="true" class="tabs-scroll">
      <view class="tab {{currentTab === 'all' ? 'active' : ''}}" data-tab="all" bindtap="switchTab">全部</view>
      <view class="tab {{currentTab === 'bread' ? 'active' : ''}}" data-tab="bread" bindtap="switchTab">面包</view>
      <view class="tab {{currentTab === 'cake' ? 'active' : ''}}" data-tab="cake" bindtap="switchTab">蛋糕</view>
      <view class="tab {{currentTab === 'cookie' ? 'active' : ''}}" data-tab="cookie" bindtap="switchTab">饼干</view>
      <view class="tab {{currentTab === 'dessert' ? 'active' : ''}}" data-tab="dessert" bindtap="switchTab">甜点</view>
      <view class="tab {{currentTab === 'gift' ? 'active' : ''}}" data-tab="gift" bindtap="switchTab">节日礼盒</view>
    </scroll-view>
  </view>
  
  <!-- 商品列表 -->
  <view class="product-list">
    <view class="product-item" wx:for="{{productList}}" wx:key="id" bindtap="navigateToDetail" data-id="{{item.id}}">
      <image class="product-image" src="{{item.image}}" mode="aspectFill"></image>
      <view class="product-info">
        <view class="product-name">{{item.name}}</view>
        <view class="product-rating">
          <view class="star-container">
            <text class="star">★</text>
            <text class="score">{{item.rating}}</text>
            <text class="reviews">({{item.reviewCount}})</text>
          </view>
        </view>
        <view class="product-price-row">
          <view class="price-container">
            <text class="price">¥{{item.price}}</text>
          </view>
          <view class="add-to-cart" catchtap="addToCart" data-id="{{item.id}}">+</view>
        </view>
      </view>
    </view>
  </view>
</view>