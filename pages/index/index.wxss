/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif;
  color: #333;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 0;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.store-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.icons {
  display: flex;
  margin-right: 20rpx;
}

.icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

/* 搜索框样式 */
.search-bar {
  display: flex;
  align-items: center;
  margin: 20rpx 10rpx 45rpx 10rpx;
  background-color: #eeeeee;
  border-radius: 40rpx;
  height: 160rpx;
  padding: 0 30rpx;
  width: calc(100% - 20rpx);
  box-sizing: border-box;
}

.search-icon-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
}

.search-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.6;
}

.search-bar input {
  flex: 1;
  height: 50rpx;
  font-size: 28rpx;
  color: #999;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-more {
  font-size: 24rpx;
  color: #999;
}

/* 横向滚动产品 */
.product-scroll {
  white-space: nowrap;
  display: flex;
  padding: 0 10rpx;
}

.product-card {
  width: 300rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  background-color: white;
  overflow: hidden;
  position: relative;
  display: inline-block;
}

.fresh-card {
  width: 300rpx;
  flex-shrink: 0;
}

.badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: rgba(141, 110, 99, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  z-index: 1;
}

.product-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.product-info {
  padding: 16rpx;
  position: relative;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  white-space: normal;
  margin-bottom: 10rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-container {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #8D6E63;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.add-to-cart {
  width: 44rpx;
  height: 44rpx;
  background-color: #8D6E63;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: bold;
}

/* 人气推荐列表 */
.popular-list {
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
}

.product-card-large {
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: white;
  position: relative;
  padding: 14rpx;
}

.product-card-large .product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.product-card-large .product-info {
  flex: 1;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.rating {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  padding-right: 50rpx; /* 为加购按钮留出空间 */
}

.star-container {
  display: flex;
  align-items: center;
}

.star {
  color: #ffb800;
  font-size: 28rpx;
  margin-right: 6rpx;
}

.score {
  font-size: 24rpx;
  color: #999; /* 灰色 */
  margin-right: 6rpx;
}

.reviews {
  font-size: 24rpx;
  color: #999;
}

.product-card-large .add-to-cart {
  position: absolute;
  right: 0;
  bottom: 10rpx;
}
