/* pages/payment/payment.wxss */
.payment-container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 订单信息样式 */
.order-info {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-label {
  font-size: 30rpx;
  color: #666666;
}

.price-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff5722;
}

.order-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.time-label {
  font-size: 28rpx;
  color: #666666;
}

.time-value {
  font-size: 28rpx;
  color: #ff5722;
  font-weight: 500;
}

/* 支付方式样式 */
.payment-methods {
  background-color: #ffffff;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.methods-list {
  display: flex;
  flex-direction: column;
}

.payment-method {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.payment-method:last-child {
  border-bottom: none;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-name {
  font-size: 30rpx;
  color: #333333;
  flex: 1;
}

.selected-icon {
  width: 40rpx;
  height: 40rpx;
}

.selected-icon image {
  width: 100%;
  height: 100%;
}

.payment-method.selected {
  background-color: #f8f8f8;
}

/* 支付须知样式 */
.payment-notice {
  background-color: #ffffff;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.notice-content {
  padding: 0 10rpx;
}

.notice-item {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666666;
  margin-bottom: 10rpx;
}

/* 底部按钮样式 */
.payment-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 999;
}

.btn-cancel, .btn-pay {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn-cancel {
  background-color: #f8f8f8;
  color: #666666;
  border: 1rpx solid #dddddd;
}

.btn-pay {
  background-color: #ff5722;
  color: #ffffff;
  border: none;
} 