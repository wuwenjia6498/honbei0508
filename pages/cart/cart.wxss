/* 购物车页面样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  padding-bottom: 120rpx; /* 为底部结算栏留出空间 */
}

.cart-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 头部标题和编辑按钮 */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  background-color: #fff;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-edit {
  font-size: 28rpx;
  color: #666;
}

/* 配送通知栏 */
.delivery-notice {
  display: flex;
  align-items: center;
  background-color: #ff9966;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
}

.notice-icon {
  margin-right: 10rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.4;
  flex: 1;
}

/* 购物车商品列表 */
.cart-items {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-checkbox {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.item-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.item-counter {
  display: flex;
  align-items: center;
}

.counter-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
}

.counter-minus {
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}

.counter-plus {
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

.counter-num {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

/* 订单备注 */
.order-remark {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.remark-icon {
  margin-right: 10rpx;
}

.remark-title {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.remark-link {
  flex: 1;
  font-size: 26rpx;
  color: #999;
  text-align: right;
}

/* 订单价格明细 */
.price-detail {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.price-value.discount {
  color: #ff6b6b;
}

/* 结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
}

.all-checkbox {
  margin-right: 10rpx;
}

.all-text {
  font-size: 28rpx;
  color: #333;
}

.total-section {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.checkout-btn {
  width: 250rpx;
  height: 70rpx;
  background: linear-gradient(to right, #ff7b6b, #ff9966);
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-text {
  color: #fff;
  font-size: 28rpx;
} 