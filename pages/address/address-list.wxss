/* pages/address/address-list.wxss */
page {
  background-color: #f7f7f7;
  height: 100%;
}

.container {
  padding-bottom: 120rpx;
  box-sizing: border-box;
  min-height: 100%;
  position: relative;
}

/* 地址列表样式 */
.address-list {
  width: 100%;
  height: calc(100vh - 120rpx);
  box-sizing: border-box;
}

.address-item {
  background-color: #ffffff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.address-info {
  width: 100%;
}

.name-phone {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666666;
}

.address-detail {
  margin-bottom: 16rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
}

.address-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.default-tag {
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.set-default, .edit-btn, .delete-btn {
  font-size: 26rpx;
  padding: 0 20rpx;
  color: #666666;
}

.edit-btn, .delete-btn {
  position: relative;
}

.edit-btn::after, .delete-btn::after {
  content: "";
  position: absolute;
  left: 0;
  top: 25%;
  height: 50%;
  width: 1rpx;
  background-color: #e0e0e0;
}

.delete-btn {
  color: #ff4d4f;
}

/* 空地址提示样式 */
.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载中样式 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部添加按钮样式 */
.add-address-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 80rpx;
  background-color: #ff4d4f;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.2);
}

