/* 订单详情页样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
  padding-top: calc(88rpx + 44px + env(safe-area-inset-top));
}

/* 加载中状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #eee;
  border-top-color: #e64340;
  border-radius: 50%;
  animation: spin 1s infinite linear;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空数据提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.return-btn {
  margin-top: 20rpx;
  padding: 15rpx 40rpx;
  background-color: #a68a7b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

/* 状态卡片 */
.status-card {
  background-color: #e4dedd;
  color: #333;
  padding: 30rpx;
  margin-bottom: 20rpx; 
  width: 100%;
  box-sizing: border-box;
}

.status-header {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 主体内容区 */
.main-content {
  background-color: transparent;
  margin: 0 30rpx;
  border-radius: 12rpx;
  overflow: visible;
  width: calc(100% - 60rpx);
  box-sizing: border-box;
}

/* 内容分段 */
.content-section {
  padding: 30rpx;
  position: relative;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.section-divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
}

/* 进度条 */
.order-progress {
  padding: 10rpx 0;
  position: relative;
}

.progress-item {
  display: flex;
  position: relative;
  padding-bottom: 30rpx;
}

.progress-item:last-child {
  padding-bottom: 0;
}

.progress-line {
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  width: 2rpx;
  height: calc(100% - 20rpx);
  background-color: #ddd;
  z-index: 1;
}

.progress-circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin-right: 20rpx;
  margin-top: 8rpx;
  position: relative;
  z-index: 2;
}

.progress-item.completed .progress-circle {
  background-color: #a68a7b;
}

.progress-item.active .progress-circle {
  background-color: #a68a7b;
  box-shadow: 0 0 0 4rpx rgba(166, 138, 123, 0.2);
}

.progress-item.completed .progress-line {
  background-color: #a68a7b;
}

.progress-content {
  flex: 1;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.progress-item.active .progress-title {
  color: #a68a7b;
  font-weight: bold;
}

.progress-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.progress-desc, .progress-delivery {
  font-size: 24rpx;
  color: #666;
}

/* 收货信息 */
.recipient-info {
  padding: 10rpx 0;
}

.recipient-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.recipient-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}

.recipient-phone {
  font-size: 28rpx;
  color: #666;
}

.recipient-address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 商品列表 */
.product-list {
  padding: 0;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
}

.product-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.product-quantity {
  font-size: 26rpx;
  color: #999;
}

/* 订单信息 */
.order-detail-list {
  padding: 10rpx 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
}

.detail-value-wrap {
  display: flex;
  align-items: center;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

.copy-btn {
  font-size: 24rpx;
  color: #a68a7b;
  margin-left: 10rpx;
  padding: 4rpx 10rpx;
  border: 1rpx solid #a68a7b;
  border-radius: 10rpx;
}

/* 金额信息 */
.amount-list {
  padding: 10rpx 0;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.amount-item:last-child {
  margin-bottom: 0;
}

.amount-label {
  font-size: 26rpx;
  color: #999;
}

.amount-value {
  font-size: 26rpx;
  color: #333;
}

.amount-item.total {
  margin-top: 10rpx;
  padding-top: 15rpx;
  border-top: 1rpx dashed #eee;
}

.total-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e64340;
}

.discount-value {
  color: #e64340;
}

/* 底部操作栏 */
.footer-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.action-button {
  height: 70rpx;
  padding: 0 30rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.service-btn {
  background-color: #fff;
  border: 1rpx solid #ccc;
}

.service-btn .button-text {
  color: #666;
}

.reorder-btn {
  background-color: #a68a7b;
}

.reorder-btn .button-text {
  color: #fff;
}

.button-text {
  font-size: 28rpx;
}

/* 自定义导航栏 */
.custom-nav-bar {
  position: fixed;
  top: env(safe-area-inset-top);
  left: 0;
  width: 100%;
  height: 44px;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  z-index: 1000;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.nav-placeholder {
  width: 60rpx;
  height: 60rpx;
} 