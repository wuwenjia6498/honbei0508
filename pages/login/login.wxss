/* pages/login/login.wxss */

.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

/* 头部样式 */
.header {
  position: relative;
  display: flex;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.back-btn {
  padding: 20rpx;
  margin-left: -20rpx;
}

.back-arrow {
  width: 18rpx;
  height: 18rpx;
  border-left: 3rpx solid #333;
  border-bottom: 3rpx solid #333;
  transform: rotate(45deg);
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 内容区域样式 */
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 50rpx;
  flex: 1;
}

/* 登录前样式 */
.login-banner {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.login-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.login-subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.login-btn {
  width: 100% !important;
  height: 90rpx !important;
  line-height: 90rpx !important;
  background-color: #a68a7b !important;
  color: #fff !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  border-radius: 45rpx !important;
  margin-bottom: 30rpx !important;
  transition: all 0.3s !important;
  text-align: center !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 0 !important;
}

.login-btn.loading {
  opacity: 0.8;
  background-color: #b99e8f;
}

.login-btn:active {
  transform: scale(0.98);
}

.privacy-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 登录后样式 */
.user-info-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 4rpx solid #f5f5f5;
}

.user-nickname {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.login-status {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
}

.back-home-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 45rpx;
  margin-top: 40rpx;
}

/* 错误信息区域 */
.error-info {
  margin-top: 20rpx;
  background-color: rgba(255, 0, 0, 0.05);
  padding: 20rpx;
  border-radius: 10rpx;
  width: 90%;
  max-width: 500rpx;
}

.error-message {
  font-size: 24rpx;
  color: #e64340;
  text-align: center;
  word-break: break-all;
}

.retry-btn {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #3cc51f;
  text-align: center;
  text-decoration: underline;
}

/* 错误状态按钮 */
.login-btn.error {
  background-color: #f8f8f8;
  color: #999;
  border: 1px solid #ddd;
} 